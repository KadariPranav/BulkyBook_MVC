@model Product

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3 ">

                <div asp-validation-summary="All"></div>
                <div class="form form-floating py-2 col-12">
                    <input asp-for="Title" Disabled class="form-control border-0 shadow" />
                    <label asp-for="Title" Disabled class="ms-0"></label>

                   
                </div>
                <div class="form form-floating py-2 col-12">
                    <input asp-for="Description" Disabled class="form-control border-0 shadow" />
                    <label asp-for="Description" Disabled class="ms-0"></label>
                    
                </div>
                <div class="form form-floating py-2 col-12">
                    <input asp-for="ISBN" Disabled class="form-control border-0 shadow" />
                    <label asp-for="ISBN" Disabled class="ms-0"></label>
                    
                </div>
                <div class="form form-floating py-2 col-12">
                    <input asp-for="Author" Disabled class="form-control border-0 shadow" />
                    <label asp-for="Author" Disabled class="ms-0"></label>
                    
                </div>
                <div class="form form-floating py-2 col-12">
                    <input asp-for="ListPrice" Disabled class="form-control border-0 shadow" />
                    <label asp-for="ListPrice" Disabled class="ms-0"></label>
                   
                </div>
                <div class="form form-floating py-2 col-12">
                    <input asp-for="Price" Disabled class="form-control border-0 shadow" />
                    <label asp-for="Price" Disabled class="ms-0"></label>
                   
                </div>
                <div class="form form-floating py-2 col-12">
                    <input asp-for="Price50" Disabled class="form-control border-0 shadow" />
                    <label asp-for="Price50" Disabled class="ms-0"></label>
                   
                </div>
                <div class="form form-floating py-2 col-12">
                    <input asp-for="Price100" Disabled class="form-control border-0 shadow" />
                    <label asp-for="Price100" Disabled class="ms-0"></label>
                    
                </div>
                <div class="row ">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">
                            Delete
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary border form-control">
                            Back to list
                        </a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>


